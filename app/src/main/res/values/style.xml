<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Widget.MyItunes.TextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="hintTextAppearance">@style/TextAppearance.MyItunes.TextInputLayout.HintText</item>
        <item name="hintTextColor">@color/colorSecondaryVariant</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="boxStrokeColor">@color/colorSecondary</item>
        <item name="android:layout_margin">4dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
    </style>


    <style name="TextAppearance.MyItunes.TextInputLayout.HintText" parent="TextAppearance.MaterialComponents.Subtitle2">
        <item name="android:textColor">@color/colorSecondaryVariant</item>
    </style>

    <style name="TextAppearance.MyItunes.MusicTitle" parent="TextAppearance.MaterialComponents.Subtitle2">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textStyle">bold</item>
    </style>

</resources>